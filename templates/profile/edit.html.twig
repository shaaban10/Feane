{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Edit Profile</h1>

        <div class="card mb-4">
            <div class="card-header">
                <h2>Personal and Address Information</h2>
            </div>
            <div class="card-body">
                {{ form_start(combinedForm) }}

                <div class="form-group">
                    {{ form_label(combinedForm.user.email, 'Email') }}
                    {{ form_widget(combinedForm.user.email, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(combinedForm.user.plainPassword, 'Password') }}
                    {{ form_widget(combinedForm.user.plainPassword, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(combinedForm.address.name, 'Name') }}
                    {{ form_widget(combinedForm.address.name, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(combinedForm.address.lastName, 'Last name') }}
                    {{ form_widget(combinedForm.address.lastName, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(combinedForm.address.city, 'City') }}
                    {{ form_widget(combinedForm.address.city, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(combinedForm.address.zipCode, 'Zip code') }}
                    {{ form_widget(combinedForm.address.zipCode, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(combinedForm.address.street, 'Street') }}
                    {{ form_widget(combinedForm.address.street, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(combinedForm.address.phoneNumber, 'Phone number') }}
                    {{ form_widget(combinedForm.address.phoneNumber, {'attr': {'class': 'form-control'}}) }}
                </div>

                <button type="submit" class="btn btn-primary">Save changes</button>
                {{ form_end(combinedForm) }}
            </div>
        </div>

        <a href="{{ path('profile_index') }}" class="btn btn-secondary mt-3">Back to Profile</a>
    </div>
{% endblock %}