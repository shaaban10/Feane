{% extends 'admin/admin.html.twig' %}

{% block title %}Liste des Carouselles{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <h1 class="my-4">Liste des Carouselles</h1>

        <div class="mb-3">
            <a href="{{ path('admin.carouselle.create') }}" class="btn btn-primary">Ajouter une nouvelle carouselle</a>
        </div>

        <div class="table-responsive">
            <!-- Display form errors if any -->
            {{ form_errors(form) }}

            <form method="post">
                {{ form_start(form) }}
                <table class="table table-striped table-bordered">
                    <!-- Add Bootstrap classes to form fields -->
                    <tr>
                        <th scope="col">Name</th>
                        <td>{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}</td>
                    </tr>
                    <tr>
                        <th scope="col">Last Name</th>
                        <td>{{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}</td>
                    </tr>
                    <tr>
                        <th scope="col">City</th>
                        <td>{{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}</td>
                    </tr>
                    <tr>
                        <th scope="col">Zip Code</th>
                        <td>{{ form_widget(form.zipCode, {'attr': {'class': 'form-control'}}) }}</td>
                    </tr>
                    <tr>
                        <th scope="col">Street</th>
                        <td>{{ form_widget(form.street, {'attr': {'class': 'form-control'}}) }}</td>
                    </tr>
                    <tr>
                        <th scope="col">Phone Number</th>
                        <td>{{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}</td>
                    </tr>
                </table>
                <!-- Add Bootstrap class to submit button -->
                <button type="submit" class="btn btn-primary">Submit</button>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
{% endblock %}
