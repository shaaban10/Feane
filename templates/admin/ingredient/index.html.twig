{% extends 'admin/admin.html.twig' %}

{% block title %}Liste des Carouselles{% endblock %}

{% block body %}
    <div class="container mt-5">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <h1 class="my-4">Liste des Ingredient</h1>

        <div class="mb-3">
            <a href="{{ path('admin.ingredient_add') }}" class="btn btn-primary">Ajouter une nouvelle ingredient</a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Image</th>
                    <th scope="col">Action</th>



                </tr>
                </thead>
                <tbody>
                {% for i in ingredients %}
                    <tr>
                        <th scope="row">{{i.id }}</th>
                        <td>{{ i.name }}</td>
                        <td>
                            {% if i.thumbnailFile %}
                                <img src="{{ vich_uploader_asset(ingredients, 'thumbnailFile') }}" style="width: 50px" alt="">
                            {% else %}
                                <span class="text-muted">Pas d'image</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Actions">
                                <a href="{{ path('admin.ingredient-edit', {id: ingredients[0].id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                <form action="{{ path('admin.ingredient-delete', {id: ingredients[0].id}) }}" method="POST" style="display:inline-block;">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette ingredient ?');">Supprimer</button>
                                </form>
                                <a href="{{ path('admin.ingredient-show', {id: ingredients[0].id}) }}" class="btn btn-primary btn-sm">Détails</a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucune ingredient trouvée.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
